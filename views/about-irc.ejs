<div class="page irc-page about-irc-page" ng-controller="GetStartedCtrl" scrollng>

  <a id="the-top"></a>
  <div class="irc-container">
    <!-- Left-side navigation -->
    <div class="navigation" ng-class="{'sticky': scrollTop>105}" ng-style="{left: scrollTop > 105 ? getOffsetLeft('.irc-container') : 0}">
      <ul>
        <li><h4>About IRC</h4></li>
        <% _.each(sections, function(section) {%>
        <li><a ng-click="intent.scrollToElement('#<%= section.id %>', 500)"><%= section.displayName %></a></li>
        <% }) %>
      </ul>
    </div>

    <div class="documentation-style-guide irc-content">
      <img class="squid about-squid" src="/images/squidford_swimming.png"/>
      <% _.each(sections, function(section) {

      // Randomize the bubble positions on the page
      var bubbleClass = _.sample(['left', 'right', 'middle']);
      %>

      <a id="<%= section.id %>"></a>
      <div class="about-irc-section">
        <%- partial('partials/doc-templates/support/'+section.path) %>
      </div>
      <div class="section-divider <%= bubbleClass %>">
        <img class="bubbles" src="/images/bkgd_bubbles01.png"/>
      </div>
      <% }) %>
    </div>

  </div>
  <div class="sails-footer-wrapper get-started-wrapper irc-wrapper" id="footer-target">
    <div class="footer-container">
      <div class="footer-image-container">
        <img class="sea-floor" id="target" src="/images/bkgd_seaScene.png"/>
      </div>
      <%- partial('partials/footer') %>
    </div>
  </div>
</div>
